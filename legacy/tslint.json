{
    "extends": [
        "tslint-microsoft-contrib"
    ],
    "rules": {
        "await-promise": false,
        "export-name": false,
        "match-default-export-name": false,
        "max-func-body-length": [
            true,
            125
        ],
        "max-line-length": [
            true,
            180
        ],
        "no-any": false,
        "no-default-export": false,
        "no-http-string": false,
        "no-relative-imports": false,
        "no-unsafe-any": false,
        "typedef": [
            true,
            "arrow-parameter",
            "call-signature",
            "member-variable-declaration",
            "parameter",
            "property-declaration"
        ],
        "underscore-consistent-invocation": false,
        "no-redundant-jsdoc": false // TODO re-enable this as soon as jsdoc comments have been adapted
    }
}